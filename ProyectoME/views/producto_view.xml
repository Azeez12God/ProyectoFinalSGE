	<record id="producto_model_kanban" model="ir.ui.view">
		<field name="name">producto.model.kanban</field>
		<field name="model">producto.model</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban" create="false">
				<field name="code"/>
				<field name="name"/>
				<field name="sale_price"/>
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click o_res_partner_kanban" style="background-color:#00438a;color:#fff;border-radius:15px;">
						<div class="oe_kanban_details">
						<strong class="o_kanban_record_title oe_partner_heading" style="font-size:16px;">
							<field name="name" style="display:block;"/>
						</strong>
							<span style="display:block;">Nombre:<field name="name" /></span>
							<span style="display:block;">Nombre:<field name="name" /></span>
						</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<menuitem id="productos_menu_root" name="Máquinas Expendedoras" action="producto_model_action_window"/>
	<menuitem id="productos_inicio_nivel1" parent="productos_menu_root" name="Productos"/>
	<menuitem id="productos_inicio_nivel2" parent="productos_inicio_nivel1" name="Caca" action="producto_model_action_window"/>
