<odoo>
    <record id="producto_model_action_window" model="ir.actions.act_window">
        <field name="name">Productos YUMMY Ñam Ñam</field>
        <field name="res_model">producto.model</field>
        <field name="view_mode">kanban,form</field>
    </record>

	<record id="producto_model_kanban" model="ir.ui.view">
		<field name="name">producto.model.kanban</field>
		<field name="model">producto.model</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban" create="true">
				<templates>
					<t t-name="kanban-box">
						<div class="oe_kanban_global_click o_res_partner_kanban"
						style="color:blue; display: flex; flex-direction: row;">

							<div style="height: 80px; width: 80px;
							background-image: url(/web/image/producto.model/1/image);
							background-repeat: no-repeat;
							background-size: cover;
							background-position: center;
							margin-right: 10px;">

							</div>

							<div class="oe_kanban_details" style="
							width: 50%;
							display: flex;
							flex-direction: column;">
								<div class="o_kanban_record_title oe_partner_heading">
									<span>Nombre: <field name="name" /></span>
								</div>
								<span>Precio: <field name="sale_price" /></span>
								<span>Stock: <field name="stock" /></span>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>

	<menuitem id="productos_menu_root" name="Máquinas Expendedoras" action="producto_model_action_window"/>
	<menuitem id="productos_inicio_nivel1" parent="productos_menu_root" name="Productos"/>
	<menuitem id="productos_inicio_nivel2" parent="productos_inicio_nivel1" name="Inventario" action="producto_model_action_window"/>
</odoo>

